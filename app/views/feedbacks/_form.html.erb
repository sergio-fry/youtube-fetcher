<%= bootstrap_form_for(feedback) do |f| %>
  <%= f.text_field :title %>
  <%= f.email_field :email %>
  <%= f.text_area :body %>



  <%= f.submit 'Send Feedback', class: 'btn btn-primary' %>

  <%= f.radio_button :category, 0, label: "Happy", inline: true, checked: true %>
  <%= f.radio_button :category, 2, label: "Unhappy", inline: true %>
  <%= f.radio_button :category, 1, label: "Feature Request", inline: true %>
<% end %>
