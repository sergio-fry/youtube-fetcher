<%= form_with(model: feedback, local: true) do |form| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <label for="title">Title *</label>
    <input class="form-control" id="title" name="feedback[title]">
  </div>
  <div class="form-group">
    <label for="email">Email *</label>
    <input class="form-control" type="email" id="email" name="feedback[email]">
  </div>
  <div class="form-group">
    <label for="body">Body</label>
    <textarea class="form-control" id="body" name="feedback[body]">
    </textarea>
  </div>
  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
