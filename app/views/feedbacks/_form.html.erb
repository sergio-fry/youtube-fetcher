<%= bootstrap_form_for(feedback) do |f| %>
  <%= f.text_field :title %>
  <%= f.email_field :email %>
  <%= f.text_area :body %>


  <%= f.radio_button :category, :feature_request, label: t(:feature_request), inline: true, checked: true %>
  <%= f.radio_button :category, :happy, label: t(:happy), inline: true %>
  <%= f.radio_button :category, :unhappy, label: t(:unhappy), inline: true %>

  <br />
  <br />
  <%= f.submit t(:send_feedback), class: 'btn btn-primary' %>
<% end %>
