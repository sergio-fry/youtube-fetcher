<% content_for :meta_title, @video.title %>

<ol class="breadcrumb">
  <li><%= link_to "#{@video.channel.title} Podcast", channel_path(@video.channel.origin_id) %></li>
  <li class="active"><%= @video.title %></li>
</ol>


<h1><%= @video.title %></h1>

<% image_tag @video.preview_image_url %>

<div class="embed-responsive embed-responsive-16by9">
  <iframe width="560" height="315" src="https://www.youtube.com/embed/<%= @video.origin_id %>" frameborder="0" allowfullscreen></iframe>
</div>

<% if @video.has_media? %>
  <br />
  <br />
  <div>
    Download:
    &nbsp;
    &nbsp;

    <% if @video.has_audio? %>
      <%= link_to 'mp3 audio', @video.audio_url %>
      (<%= number_to_human_size(@video.audio_size) %>)
      &nbsp;
      &nbsp;
      &nbsp;
    <% end %>

    <% if @video.has_video? %>
      <%= link_to 'mp4 video', url_for(id: @video.origin_id, format: :mp4) %>
      (<%= number_to_human_size(@video.video_size) %>)
    <% end %>
  </div>
<% end %>
